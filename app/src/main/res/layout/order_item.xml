<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:layout_marginTop="20dp"
                                                   app:cardElevation="2dp"
                                                    app:cardCornerRadius="25dp"
                                   app:cardBackgroundColor="@color/colorPrimary">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="8dp">



        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/orderTextView"
                app:layout_constraintStart_toStartOf="@+id/priceDistanceTextView"
                app:layout_constraintEnd_toEndOf="@+id/priceDistanceTextView"
                app:layout_constraintHorizontal_bias="1.0" android:layout_marginStart="0dp"
                android:layout_marginTop="19dp"
                app:layout_constraintTop_toBottomOf="@+id/priceDistanceTextView"
                android:layout_below="@+id/textViewOrderDriver" android:layout_alignStart="@+id/textViewOrderDriver"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/priceDistanceTextView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="1dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="21dp" android:layout_below="@+id/textViewOrderUser"
                android:layout_alignStart="@+id/textViewOrderUser"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/imageViewOrderRated" app:layout_constraintStart_toEndOf="@+id/textViewOrderDriver"
                android:layout_marginStart="21dp" android:layout_marginTop="-29dp"
                app:layout_constraintTop_toTopOf="@+id/textViewOrderUser"
                android:layout_toEndOf="@+id/textViewOrderDriver" android:layout_alignTop="@+id/textViewOrderDriver"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewOrderUser" app:layout_constraintStart_toEndOf="@+id/priceDistanceTextView"
                android:layout_marginStart="31dp" android:layout_marginTop="47dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewOrderDriver" app:layout_constraintStart_toEndOf="@+id/orderTextView"
                android:layout_marginStart="39dp" android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewOrderUser"
                android:layout_toEndOf="@+id/textViewOrderUser" android:layout_alignTop="@+id/textViewOrderUser"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewRate"
                android:layout_marginTop="4dp" android:layout_below="@+id/imageViewOrderRated"
                android:layout_marginStart="12dp" android:layout_alignStart="@+id/imageViewOrderRated"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewDate" android:layout_marginStart="1dp"
                android:layout_alignStart="@+id/textViewOrderUser" android:layout_marginTop="14dp"
                android:layout_alignParentTop="true" android:textStyle="bold"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>