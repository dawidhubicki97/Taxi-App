<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.ChatFragment" android:orientation="horizontal">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="366dp"
            android:layout_height="474dp"
            android:id="@+id/chatRecyclerView"

            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="100dp"/>
    <EditText
            android:layout_width="246dp"
            android:layout_height="87dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextChat"
            android:layout_gravity="bottom|left"
            />
    <Button
            android:text="Wyslij"
            android:layout_width="98dp"
            android:layout_height="84dp"
            android:id="@+id/buttonChat"
            android:background="@drawable/rounded_button"
            android:layout_gravity="bottom|right"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/chatPersonTextView" android:layout_marginTop="50dp"
            android:textSize="24sp"/>
    <TextView
            android:text="Brak aktualnego zamÃ³wienia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/warningTextView" android:layout_marginTop="200dp"
            android:layout_marginLeft="30dp" android:visibility="invisible" android:textSize="24sp"/>


</FrameLayout>
