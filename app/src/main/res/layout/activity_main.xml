<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#353e47">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailTextRegister"
            android:background="@drawable/rounded_login_register_text"
            android:hint="Login"
            android:layout_marginTop="24dp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView" app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.508"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:padding="5dp"
            android:id="@+id/passwordTextRegister"
            android:background="@drawable/rounded_login_register_text"
            app:layout_constraintStart_toStartOf="@+id/emailTextRegister"
            app:layout_constraintEnd_toEndOf="@+id/emailTextRegister" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/emailTextRegister" android:hint="Password"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton"
            app:layout_constraintStart_toStartOf="@+id/passwordTextRegister"
            android:background="@drawable/rounded_button"
            app:layout_constraintEnd_toEndOf="@+id/passwordTextRegister"
            app:layout_constraintTop_toBottomOf="@+id/passwordTextRegister" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.504"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerButtonGo"
            android:background="@drawable/rounded_button"
            app:layout_constraintStart_toStartOf="@+id/loginButton"
            app:layout_constraintEnd_toEndOf="@+id/loginButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/loginButton"/>
    <ImageView
            android:layout_width="270dp"
            android:layout_height="220dp" app:srcCompat="@drawable/cartop" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.568"/>

</androidx.constraintlayout.widget.ConstraintLayout>