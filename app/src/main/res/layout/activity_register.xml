<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:background="#03A9F4">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailTextRegister"
            android:background="@drawable/rounded_login_register_text"
            app:layout_constraintStart_toStartOf="@+id/usernameText"
            app:layout_constraintEnd_toEndOf="@+id/usernameText"
            app:layout_constraintTop_toBottomOf="@+id/usernameText" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.0" android:hint="Email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextRegister"
            android:background="@drawable/rounded_login_register_text"
            app:layout_constraintStart_toStartOf="@+id/emailTextRegister"
            app:layout_constraintEnd_toEndOf="@+id/emailTextRegister" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/emailTextRegister" android:layout_marginTop="24dp"
            android:hint="Password"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerButtonConfirm"
            android:background="@drawable/rounded_button"
            app:layout_constraintStart_toStartOf="@+id/passwordTextRegister"
            app:layout_constraintEnd_toEndOf="@+id/passwordTextRegister"
            app:layout_constraintTop_toBottomOf="@+id/passwordTextRegister" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.496"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameText"
            android:background="@drawable/rounded_login_register_text"
            android:hint="Username"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="108dp" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>