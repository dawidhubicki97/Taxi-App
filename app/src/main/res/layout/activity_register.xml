<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#353e47">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:padding="5dp"
            android:id="@+id/emailTextRegister"
            android:background="@drawable/rounded_login_register_text"
            app:layout_constraintStart_toStartOf="@+id/usernameText"
            app:layout_constraintEnd_toEndOf="@+id/usernameText"
            app:layout_constraintTop_toBottomOf="@+id/usernameText" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.0" android:hint="Email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:padding="5dp"
            android:id="@+id/passwordTextRegister"
            android:background="@drawable/rounded_login_register_text"
            app:layout_constraintStart_toStartOf="@+id/emailTextRegister"
            app:layout_constraintEnd_toEndOf="@+id/emailTextRegister" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/emailTextRegister" android:layout_marginTop="24dp"
            android:hint="Hasło"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:padding="5dp"
            android:id="@+id/passwordRepeatTextRegister"
            android:background="@drawable/rounded_login_register_text"
            android:hint="Powtórz Hasło" app:layout_constraintTop_toBottomOf="@+id/passwordTextRegister"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/passwordTextRegister"
            app:layout_constraintEnd_toEndOf="@+id/passwordTextRegister" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Załóż Konto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerButtonConfirm"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerRole" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:padding="5dp"
            android:id="@+id/usernameText"
            android:background="@drawable/rounded_login_register_text"
            android:hint="Nazwa użytkownika"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="108dp" app:layout_constraintTop_toTopOf="parent"/>
    <Spinner
            android:layout_width="211dp"
            android:layout_height="30dp"
            android:entries="@array/roles"
            android:padding="5dp"
            android:id="@+id/spinnerRole"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_login_register_text"
            app:layout_constraintTop_toBottomOf="@+id/phoneTextView"
            app:layout_constraintStart_toStartOf="@+id/phoneTextView"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/phoneTextView"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:background="@drawable/rounded_login_register_text"
            android:ems="10"
            android:padding="5dp"
            android:hint="Telefon"
            android:id="@+id/phoneTextView"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordRepeatTextRegister"
            app:layout_constraintStart_toStartOf="@+id/passwordRepeatTextRegister"
            app:layout_constraintEnd_toEndOf="@+id/passwordRepeatTextRegister"
            app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>